.tab-bar {
  position: fixed;
  bottom: 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  width: 100%;
  background-color: #fff;
  box-shadow: 0px 11px 25px 2px #C6C6C6;
}
.tab-bar .tab-list {
  padding: 20rpx;
}
.tab-bar .tab-list .tab-item.tab2 {
  width: 30%;
}
.tab-bar .tab-list .tab-item .t-img {
  width: 40rpx;
  height: 40rpx;
}
.tab-bar .tab-list .tab-item .t-txt {
  font-size: 24rpx;
}
.tab-bar .tab-list .tab-item .t-txt.active {
  color: #FA842B;
}
.tab-bar .tab-list .tab-item .item3 {
  position: absolute;
  width: 240rpx;
  border-radius: 70px 70px 0 0;
  background-color: #fff;
  top: -30rpx;
  padding: 10rpx 10rpx 0 10rpx;
}
.tab-bar .tab-list .tab-item .item3 .btn {
  border-radius: 70px 0 0 0;
  width: 120rpx;
  height: 120rpx;
  background-color: #FCCD4D;
  color: #fff;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tab-bar .tab-list .tab-item .item3 .btn text {
  display: inline-block;
  width: 35px;
  height: 35px;
  text-align: center;
  margin-top: 30rpx;
  padding: 15rpx;
}
.tab-bar .tab-list .tab-item .item3 .btn.left {
  justify-content: flex-end;
}
.tab-bar .tab-list .tab-item .item3 .btn.right {
  border-radius: 0  70px 0 0;
  justify-content: flex-start;
  background-color: #FA842B;
}
.add {
  width: 80rpx;
  height: 80rpx;
