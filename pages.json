{
	"pages": [
		//pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages

		{
			"path": "pages/home/home",
			"style": {
				"navigationBarTitleText": "首页",
				"enablePullDownRefresh": true
			}
		}, {
			"path": "pages/share/share",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "分享",
				"enablePullDownRefresh": true
			}
		}, {
			"path": "pages/login/login",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/msg/msg",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/user/user",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "我的",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/register/register",
			"style": {
				"navigationBarTitleText": "新用户注册",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/findPwd/findPwd",
			"style": {
				"navigationBarTitleText": "找回密码",
				"enablePullDownRefresh": false
			}

		}
	],
	"subPackages": [{
			"root": "pagesA",
			"pages": [{
					"path": "search/search",
					"style": {
						"navigationStyle": "custom",
						"navigationBarTitleText": "搜索",
						"enablePullDownRefresh": false
					}
				}, {
					"path": "searchResult/searchResult",
					"style": {
						"navigationStyle": "custom",
						"navigationBarTitleText": "",
						"navigationBarTextStyle": "white"
					}
				}, {
					"path": "detail/detail",
					"style": {
						"navigationBarTitleText": "详情",
						"enablePullDownRefresh": false
					}

				},
				{
					"path": "cate/cate",
					"style": {
						"navigationBarTitleText": "分类",
						"enablePullDownRefresh": false
					}
				}
			]
		},
		{
			"root": "pagesB",
			"pages": [{
					"path": "orderDetail/orderDetail",
					"style": {
						"navigationBarTitleText": "订单详情",
						"enablePullDownRefresh": false
					}
				}

			]
		},
		{
			"root": "pagesC",
			"pages": [{
				"path": "orderDetail/orderDetail",
				"style": {
					"navigationBarTitleText": "订单详情",
					"enablePullDownRefresh": false
				}
			}, {
				"path": "bill/bill",
				"style": {
					"navigationBarTitleText": "账单",
					"enablePullDownRefresh": false
				}

			},{
				"path": "message/message",
				"style": {
					"navigationBarTitleText": "隐私协议",
					"enablePullDownRefresh": false
				}

			}, {
				"path": "collection/collection",
				"style": {
					"navigationBarTitleText": "我的收藏",
					"enablePullDownRefresh": false
				}
			}, {
				"path": "info/info",
				"style": {
					"navigationBarTitleText": "我的信息",
					"enablePullDownRefresh": false
				}
			}]
		}
	],
	"preloadRule": {
		"pages/home/home": {
			"network": "all",
			"packages": ["pagesA", "pagesB", "pagesC"]
		}
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"custom": true,
		"borderStyle": "black",
		"backgroundColor": "#fff",
		"color": "#CBCBCB",
		"selectedColor": "#FA842B",
		"list": [{
				"pagePath": "pages/home/home",
				"iconPath": "static/tabbar/home-a.jpg",
				"selectedIconPath": "static/tabbar/home-a.jpg",
				"text": "首页"
			},
			{
				"pagePath": "pages/msg/msg",
				"iconPath": "static/tabbar/msg-a.jpg",
				"selectedIconPath": "static/tabbar/msg-a.jpg",
				"text": "客服"
			},
			{
				"pagePath": "pages/share/share",
				"iconPath": "static/tabbar/home-a.jpg",
				"selectedIconPath": "static/tabbar/home-a.jpg",
				"text": "分享"
			},
			{
				"pagePath": "pages/user/user",
				"iconPath": "static/tabbar/home-a.jpg",
				"selectedIconPath": "static/tabbar/home-a.jpg",
				"text": "我的"
			}
		]
	}
